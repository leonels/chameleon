<%= form_for [:admin, @form] do |f| %>
  <% if @form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@form.errors.count, "error") %> prohibited this form from being saved:</h2>

      <ul>
      <% @form.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :heading %><br />
    <%= f.text_field :heading %>
  </div>

  <% unless params[:page_id] %>
  <div class="field">
	  <%= f.label :page_id, 'Page' %><br />
	  <%= f.collection_select :page_id, @pages, :id, :title %>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 6 %>
  </div>
  <div class="actions">
    <%= f.submit :disable_with => "Processing..." %>
  </div>
<% end %>
