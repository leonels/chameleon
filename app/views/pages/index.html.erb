</div>

<% @pages.each do |page| %>
<div class="block empty">
  <div class="emptyGuts">
    <h1><%= page.title %></h1>
    <p style="margin:0;"><%= link_to 'Edit', edit_page_path(page) %></p>
  </div>
</div>
<% end %>


