<style>
table#messages th, table#messages td{
  border:1px solid #CCC;
  padding:5px;
}
</style>

<h1>Listing messages</h1>

<table id="messages">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Website</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.visitor_name %></td>
    <td><%= message.visitor_email %></td>
    <td><%= message.visitor_phone %></td>
    <td><%= message.website_id %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Message', new_message_path %>
