<%= form_for @website, :html => {:multipart => true} do |f| %>
  <% if @website.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@website.errors.count, "error") %> prohibited this website from being saved:</h2>

      <ul>
      <% @website.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :subdomain %><br />
    <%= f.text_field :subdomain %>
  </div>

  <div class="field">
    
    <% if @website.logo? %>
      <%= image_tag(@website.logo_url) %><br />
      <%= f.check_box :remove_logo %> Remove logo<br />
    <% end %>
    
    <%= f.file_field :logo %>
  </div>
  
  <div class="field">
    <%= f.label :layout_name %><br />
    <%= f.select :layout_name, [["Plain", 'plain'], ['Practical', 'practical'], ["Standard", 'standard'], ['Strong', 'strong'], ['Teach', 'teach']]%>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
